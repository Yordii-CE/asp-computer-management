<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion de computo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <div class="d-flex vh-100">       
        <div class="bg-white h-100 container-menu">  
            <h5 class="p-3 border-bottom">Equipos de computo</h5>
            
            <div class="menu d-flex px-3 flex-column">
                <a class="text-decoration-none" role="button" asp-area="" asp-controller="computers" asp-action="Index">Equipos</a>              
                <a class="mx-4 text-decoration-none" role="button" asp-area="" asp-controller="models" asp-action="Index">Modelos</a>
                <a class="mx-4 text-decoration-none" role="button" asp-area="" asp-controller="brands" asp-action="Index">Marcas</a>
                <a class="text-decoration-none" role="button" asp-area="" asp-controller="departments" asp-action="Index">Departamentos</a>
                <a class="text-decoration-none" role="button" asp-area="" asp-controller="responsibles" asp-action="Index">Responsables</a>

            </div>

        </div>
        <div class="flex-grow-1 mx-4 content p-3">
            <div>
                <p class="title">@ViewData["Content-title"]</p>                
            </div>
            <div class="mt-3">
                @RenderBody()  
            </div>

            
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/helpers/active_tag.js"></script>
    <script>activeTag("@ViewData["Title"]");</script>

    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
